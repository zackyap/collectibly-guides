!!!
%html{:lang => "en-us"}
  %head
    %title= "#{yield(:title)}"
    = stylesheet_link_tag "//cdn-images.mailchimp.com/embedcode/slim-081711.css", media: "all"
    = stylesheet_link_tag :application, :media => "all"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", media: "all"
    = javascript_include_tag :application, "data-tubolinks-track" => true
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    = csrf_meta_tags
    = display_meta_tags
    - if Rails.env.production?
      / Production Mode
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-38700303-7', 'auto');
        ga('send', 'pageview');

    %body
      .page-container
        / = render 'layouts/navbar'
        = render "layouts/sidebar"
        / = render "application/flash", :flash => flash

        #page-container.push
          = yield

        = render 'layouts/footer'